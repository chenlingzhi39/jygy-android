<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/llReplace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tlBtm"
        android:orientation="vertical">

    </FrameLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tlBtm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        tl:tl_iconGravity="TOP"
        android:visibility="visible"
        tl:tl_iconHeight="18dp"
        tl:tl_iconMargin="5dp"
        android:paddingTop="4dp"
        tl:tl_iconWidth="18dp"
        tl:tl_indicator_bounce_enable="false"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_gravity="TOP"
        tl:tl_textSelectColor="@color/gray"
        tl:tl_textUnselectColor="@color/white"
        tl:tl_textsize="15sp"
        tl:tl_underline_color="#f3f3f3"
        tl:tl_underline_gravity="TOP"
        tl:tl_underline_height="1dp" />
</RelativeLayout>
