<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.endeavour.jygy.login.activity.SignActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/activity_vertical_margin" >

            <EditText
                android:id="@+id/edPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/login_textedit"
                android:gravity="left|center_vertical"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:paddingLeft="4dp"
                android:phoneNumber="true"
                android:textSize="@dimen/text_moderate2" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/btnGetCode"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_moderate2"
                rv:rv_backgroundColor="#ff5b69"
                rv:rv_backgroundPressColor="#ff766f"
                rv:rv_cornerRadius="4dp"
                rv:rv_strokeWidth="1dp"
                rv:rv_textPressColor="#ffffff" />
        </RelativeLayout>

        <EditText
            android:id="@+id/etAuthCode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:singleLine="true"
            android:background="@drawable/login_textedit"
            android:gravity="left|center_vertical"
            android:hint="请输入获取到的验证码"
            android:numeric="integer"
            android:paddingLeft="4dp"
            android:textSize="@dimen/text_moderate2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/activity_vertical_margin" >

            <EditText
                android:id="@+id/edPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/login_textedit"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:paddingRight="18dp"
                android:password="true"
                android:textSize="@dimen/text_moderate2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:text="密码"
                android:textSize="@dimen/text_moderate2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llComPasswd"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/activity_vertical_margin" >

            <EditText
                android:id="@+id/edPasswordConfim"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/login_textedit"
                android:gravity="right|center_vertical"
                android:paddingRight="18dp"
                android:singleLine="true"
                android:password="true"
                android:textSize="@dimen/text_moderate2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:text="确认密码"
                android:textSize="@dimen/text_moderate2" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/red"
            android:text="如手机号更换，请联系管理员" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="确 认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_moderate2"
            rv:rv_backgroundColor="#ff5b69"
            rv:rv_backgroundPressColor="#ff766f"
            rv:rv_cornerRadius="4dp"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>