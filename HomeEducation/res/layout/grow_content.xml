<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_good_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_grow_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_grow_bottom"
        android:layout_below="@+id/ll_grow_title"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="#e5e5e5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_grow_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#F8F8F8"
        android:gravity="center" >

        <Button
            android:id="@+id/bt_grow_do"
            android:layout_width="300dp"
            android:layout_height="43dp"
            android:text="我要制作"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_big" />
    </LinearLayout>

</RelativeLayout>