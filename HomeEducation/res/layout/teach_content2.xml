<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.endeavour.jygy.parent.activity.NoticeListActivity">


    <ExpandableListView
        android:id="@+id/lvTeacherPlanDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSendTask"
        android:background="#f0f0f1"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:groupIndicator="@null"
        android:listSelector="#00000000">

    </ExpandableListView>


    <com.flyco.roundview.RoundTextView
        android:id="@+id/btnSendTask"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="发送任务"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/text_moderate2"
        rv:rv_backgroundColor="#ff5b69"
        rv:rv_backgroundPressColor="#ff766f"
        rv:rv_cornerRadius="4dp"
        rv:rv_strokeWidth="1dp"
        rv:rv_textPressColor="#ffffff" />
</RelativeLayout>
