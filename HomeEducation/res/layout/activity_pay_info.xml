<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F8F8F8"
    android:orientation="vertical"
    tools:context="com.endeavour.jygy.parent.activity.PayInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnPay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/llPrice"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="价格:"
                    android:textSize="@dimen/text_moderate2" />


                <TextView
                    android:id="@+id/tvPayAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_big" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llBabyPayInfo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/llPrice"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="家长账号: "
                    android:textSize="@dimen/text_moderate2" />

                <TextView
                    android:id="@+id/tvParentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:text="王丽芳"
                    android:textSize="@dimen/text_moderate2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBabyName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/llBabyPayInfo"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="宝宝姓名: "
                    android:textSize="@dimen/text_moderate2" />

                <TextView
                    android:id="@id/tvBabyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:text="王诗涵"
                    android:textSize="@dimen/text_moderate2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBabySex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llBabyName"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资费说明:"
                    android:textSize="@dimen/text_moderate2" />

                <TextView
                    android:id="@+id/tvPayInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_moderate2" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/text_moderate2"
        rv:rv_backgroundColor="#ff5b69"
        rv:rv_backgroundPressColor="#ff766f"
        rv:rv_cornerRadius="4dp"
        rv:rv_strokeWidth="1dp"
        rv:rv_textPressColor="#ffffff" />

</RelativeLayout>
