<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.endeavour.jygy.login.activity.SignActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etOldPasswd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/login_textedit"
            android:gravity="left|center_vertical"
            android:hint="请输入原密码"
            android:paddingLeft="4dp"
            android:password="true"
            android:textSize="@dimen/text_moderate2" />


        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/login_textedit"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:paddingLeft="4dp"
            android:paddingRight="18dp"
            android:password="true"
            android:textSize="@dimen/text_moderate2" />

        <EditText
            android:id="@+id/edPasswordConfim"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/login_textedit"
            android:gravity="left|center_vertical"
            android:hint="请输入确认密码"
            android:paddingLeft="4dp"
            android:paddingRight="18dp"
            android:password="true"
            android:textSize="@dimen/text_moderate2" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="确 认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_moderate2"
            rv:rv_backgroundColor="#ff5b69"
            rv:rv_backgroundPressColor="#ff766f"
            rv:rv_cornerRadius="4dp"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>