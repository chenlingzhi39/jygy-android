<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.endeavour.jygy.login.activity.SignStep2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/llUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ems="5"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="所在省: "
                        android:textSize="@dimen/text_moderate2" />

                    <EditText
                        android:id="@+id/etProvince"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_textedit"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/select_down"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:paddingRight="18dp"
                        android:textSize="@dimen/text_moderate2">

                    </EditText>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ems="5"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="所在市: "
                        android:textSize="@dimen/text_moderate2" />

                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_textedit"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/select_down"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:paddingRight="18dp"
                        android:textSize="@dimen/text_moderate2" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:text="* 所在区:"
                        android:textSize="@dimen/text_moderate2" />

                    <EditText
                        android:id="@+id/etArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="18dp"
                        android:textSize="@dimen/text_moderate2" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ems="5"
                        android:gravity="right"
                        android:text="幼儿园: "
                        android:textSize="@dimen/text_moderate2" />

                    <EditText
                        android:id="@+id/etSchool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_textedit"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/select_down"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:paddingRight="18dp"
                        android:textSize="@dimen/text_moderate2" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ems="5"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="家长姓名: "
                        android:textSize="@dimen/text_moderate2" />

                    <EditText
                        android:id="@+id/etParentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_textedit"
                        android:gravity="right|center_vertical"
                        android:paddingRight="18dp"
                        android:singleLine="true"
                        android:textSize="@dimen/text_moderate2" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ems="5"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="监护角色: "
                        android:textSize="@dimen/text_moderate2" />

                    <EditText
                        android:id="@+id/etIdentity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_textedit"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/select_down"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:paddingRight="18dp"
                        android:textSize="@dimen/text_moderate2" />


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/llUp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/btn_big"
            android:gravity="center"
            android:padding="10dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/text_moderate3"
            android:textStyle="bold"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#ffffff">

        </com.flyco.roundview.RoundTextView>
    </LinearLayout>


</ScrollView>
