<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.endeavour.jygy.login.activity.StartupActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_logo"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_big"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="155dp"
        android:orientation="vertical">


        <com.flyco.roundview.RoundTextView
            android:id="@+id/btn2Login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_moderate2"
            android:textStyle="bold"
            rv:rv_backgroundColor="#ff5b69"
            rv:rv_backgroundPressColor="#ff766f"
            rv:rv_cornerRadius="4dp"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#ffffff" />


        <com.flyco.roundview.RoundTextView
            android:id="@+id/btn2Sign"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="注册"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/text_moderate2"
            android:textStyle="bold"
            rv:rv_backgroundColor="#f1f1f1"
            rv:rv_backgroundPressColor="#e0e0e0"
            rv:rv_strokeColor="#f0f0f0"
            rv:rv_cornerRadius="4dp"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#9a9a9a" />
    </LinearLayout>


</RelativeLayout>
